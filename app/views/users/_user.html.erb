<div id="<%= dom_id user %>" class="border rounded my-5 p-5">
  <div class="row">
    <div class="col-1">
      <p class="text-muted">
        Name
      </p>
      <p class="text-muted">
        Email
      </p>
    </div>

    <div class="col">
      <p class="text-success">
        <%= user.name %>
      </p>
      <p class="text-success">
        <%= user.email.present? ? user.email : 'NO EMAIL' %>
      </p>
    </div>
  </div>
</div>
